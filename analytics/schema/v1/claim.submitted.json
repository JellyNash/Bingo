{
  "$id": "claim.submitted",
  "description": "Player submits a bingo claim",
  "allOf": [
    { "$ref": "_common.json" },
    {
      "properties": {
        "name": { "const": "claim.submitted" },
        "props": {
          "type": "object",
          "required": ["pattern"],
          "properties": {
            "pattern": {
              "type": "string",
              "description": "Type of pattern being claimed"
            },
            "positions": {
              "type": "array",
              "items": { "type": "integer", "minimum": 0, "maximum": 24 },
              "description": "Card positions involved in the claim"
            },
            "confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Client-side confidence score"
            }
          },
          "additionalProperties": true
        }
      }
    }
  ]
}