# Bingo Platform - Offline/Local Event Environment
# Copy this file to .env.offline and update the values

# Security - CHANGE THESE IN PRODUCTION
JWT_SECRET=change-me-to-a-secure-secret-at-least-32-chars
GAME_SEED_SECRET=change-me-to-another-secure-secret

# Database
DATABASE_URL=postgresql://bingo:bingo@postgres:5432/bingo
POSTGRES_PASSWORD=bingo

# Redis
REDIS_URL=redis://redis:6379
EVENT_CHANNEL=bingo:events

# Services
NODE_ENV=production
API_PORT=3000
REALTIME_PORT=4000

# Caddy (Web Server)
DOMAIN=localhost
EMAIL=admin@bingo.local

# Grafana (Monitoring)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GF_SERVER_ROOT_URL=http://localhost:3001

# Optional: Security headers for Caddy
SECURITY_HEADERS="X-Content-Type-Options nosniff; X-Frame-Options DENY; Referrer-Policy no-referrer"